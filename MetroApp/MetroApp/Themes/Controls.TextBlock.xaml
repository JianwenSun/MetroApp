<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Themes="clr-namespace:MetroApp.Themes">

    <Style TargetType="{x:Type TextBlock}"
           x:Key="MetroTextBlock">
        <Setter Property="Foreground"
                Value="{DynamicResource {x:Static Themes:BrushKeys.TextBlockForegroundBrushKey}}" />
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="SystemTextBlock">
        <Setter Property="Style" Value="{x:Null}"/>
    </Style>
</ResourceDictionary>