                                    <Label Content="Vertical Slider"/>
                                    <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                        <Slider Orientation="Vertical"
                                            Height="200"
                                            Value="75"
                                            Cursor="SizeNS" />
