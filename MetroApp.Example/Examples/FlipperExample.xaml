<UserControl x:Class="MetroApp.Example.FlipperExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="sunjianwen143@hotmail.com"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="Yellow">
        <Controls:FlipperView x:Name="FilpperView">
            <Controls:FlipperView.FrontContent>
                <Grid Height="300" Width="300" Background="Black">
                    <Button Width="25"
                            Height="25" Content="Front" Click="Button_Click"/>
                </Grid>
            </Controls:FlipperView.FrontContent>

            <Controls:FlipperView.BackContent>
                <Grid Height="300" Width="300" Background="White">
                    <Button Width="25"
                            Height="25" Content="Back" Click="Button_Click">
                    </Button>
                </Grid>
            </Controls:FlipperView.BackContent>
        </Controls:FlipperView>
    </Grid>
</UserControl>
