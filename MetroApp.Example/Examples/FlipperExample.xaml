                                    </StackPanel>
                                </StackPanel>
                            </DockPanel>
                        </Grid>
                    </Border>
                </ListBoxItem>
                <ListBoxItem Margin="10">
                    <Border HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch" Background="{DynamicResource {x:Static Themes:BrushKeys.MainBrushKey}}">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Sliders TickPlacement" Margin="5" HorizontalAlignment="Center"/>

                            <DockPanel Grid.Row="1">
                                <StackPanel>
                                    <Label Content="Horizontal Slider"/>
                                    <Slider Style="{DynamicResource FlatSlider}"
                                        Margin="5"
                                        VerticalAlignment="top"
                                        IsSnapToTickEnabled="True"
                                        HorizontalAlignment="Left"
                                        Width="150"
                                        Value="10"
                                        TickPlacement="Both"
                                        TickFrequency="25" />
                                    <Slider Margin="5"
                                        VerticalAlignment="top"
                                        HorizontalAlignment="Left"
                                        Width="150"
                                        TickPlacement="BottomRight"
                                        TickFrequency="25"
                                        Value="50" />
                                    <Slider Margin="5"
                                        VerticalAlignment="top"
                                        HorizontalAlignment="Left"
                                        Width="150"
                                        TickPlacement="Both"
                                        TickFrequency="25"
                                        Value="50" />
                                </StackPanel>
                                <StackPanel>
                                    <Label Content="Vertical Slider"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Slider Margin="5"
                                        Style="{DynamicResource FlatSlider}"
                                        VerticalAlignment="top"
                                        HorizontalAlignment="Left"
                                        Height="200"
                                        TickPlacement="TopLeft"
                                        TickFrequency="25"
                                        Value="50"
                                        Orientation="Vertical" />
                                        <Slider Margin="5"
                                        VerticalAlignment="top"
                                        HorizontalAlignment="Left"
                                        Height="200"
                                        TickPlacement="BottomRight"
                                        TickFrequency="25"
                                        Value="50"
                                        Orientation="Vertical" />
                                        <Slider Margin="5"
                                        VerticalAlignment="top"
                                        HorizontalAlignment="Left"
                                        Height="200"
                                        TickPlacement="TopLeft"
                                        TickFrequency="25"
                                        Value="50"
                                        Orientation="Vertical" />
                                    </StackPanel>
                                </StackPanel>
                            </DockPanel>
                        </Grid>
                    </Border>
                </ListBoxItem>
            </ListBox>
